<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.smartpos.ui.InventoryViewController" spacing="20" style="-fx-padding: 20;">
    
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Ombor boshqaruvi" styleClass="label-header"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Mahsulotlarni qidirish..." prefWidth="300" styleClass="text-field-modern"/>
    </HBox>

    <!-- Summary Cards -->
    <HBox spacing="20">
        <VBox styleClass="glass-pane" prefWidth="200" style="-fx-padding: 15;">
            <Label text="Jami mahsulotlar" style="-fx-text-fill: #a0a0b0;"/>
            <Label fx:id="totalItemsLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        </VBox>
        <VBox styleClass="glass-pane" prefWidth="200" style="-fx-padding: 15;">
            <Label text="Kam qolganlar (Ogohlantirish)" style="-fx-text-fill: #ff6b6b;"/>
            <Label fx:id="lowStockLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ff6b6b;"/>
        </VBox>
    </HBox>

    <!-- Inventory Table -->
    <VBox styleClass="glass-pane" VBox.vgrow="ALWAYS" style="-fx-padding: 15;">
         <Label text="Zaxira darajasi (Zaxira/Chegarani tahrirlash uchun ikki marta bosing)" style="-fx-text-fill: #808090; -fx-padding: 0 0 10 0;"/>
         <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS" editable="true">
             <columns>
                 <TableColumn fx:id="colName" text="Product Name" prefWidth="200"/>
                 <TableColumn fx:id="colBarcode" text="Barcode" prefWidth="120"/>
                 <TableColumn fx:id="colStock" text="Current Stock" prefWidth="100"/>
                 <TableColumn fx:id="colThreshold" text="Alert Threshold" prefWidth="100"/>
                 <TableColumn fx:id="colForecast" text="Forecast (AI)" prefWidth="120"/>
                 <TableColumn fx:id="colAction" text="Actions" prefWidth="120"/>
             </columns>
             <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
             </columnResizePolicy>
         </TableView>
    </VBox>

</VBox>
