<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="20" stylesheets="@../css/styles.css" fx:controller="com.smartpos.ui.CategoryViewController">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox spacing="5">
            <Label text="PRODUCT ORGANIZATION" style="-fx-text-fill: #00f2fe; -fx-font-size: 11px; -fx-font-weight: 900; -fx-letter-spacing: 3px;"/>
            <Label text="Kategoriyalar" styleClass="view-title"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="+ Yangi kategoriya" styleClass="button-primary" onAction="#handleNewCategory">
            <graphic><FontAwesomeIconView glyphName="PLUS" size="14" style="-fx-fill: white;"/></graphic>
        </Button>
    </HBox>

    <TableView fx:id="categoryTable" VBox.vgrow="ALWAYS" styleClass="glass-pane">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80" />
            <TableColumn fx:id="colName" text="KATEGORIYA NOMI" prefWidth="400" />
            <TableColumn fx:id="colAction" text="AMAL" prefWidth="150" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT">
        <Button text="Orqaga" onAction="#handleBack" styleClass="button-secondary">
             <graphic><FontAwesomeIconView glyphName="ARROW_LEFT" size="14"/></graphic>
        </Button>
    </HBox>
</VBox>
