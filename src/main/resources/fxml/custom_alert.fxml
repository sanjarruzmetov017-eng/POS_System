<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smartpos.ui.CustomAlertController"
      styleClass="custom-alert-container" spacing="20" alignment="CENTER"
      prefWidth="450">

    <HBox spacing="15" alignment="CENTER_LEFT">
        <StackPane fx:id="iconContainer">
            <FontAwesomeIconView fx:id="iconView" size="40"/>
        </StackPane>
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label fx:id="titleLabel" style="-fx-font-size: 20px; -fx-font-weight: 900; -fx-text-fill: white;"/>
            <Label fx:id="messageLabel" wrapText="true" style="-fx-text-fill: #b0b0c0; -fx-font-size: 14px;"/>
        </VBox>
    </HBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="OK" onAction="#handleClose" styleClass="button-primary" prefWidth="100"/>
    </HBox>

</VBox>
