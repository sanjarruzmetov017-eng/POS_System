<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="20" fx:controller="com.smartpos.ui.SuperAdminController" 
      stylesheets="@../css/styles.css" styleClass="admin-pane">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    
    <HBox alignment="CENTER_LEFT" spacing="15">
        <FontAwesomeIconView glyphName="GEARS" size="30" styleClass="icon-neon"/>
        <Label text="Super Admin - Do'konlar Boshqaruvi" styleClass="label-header"/>
    </HBox>
    
    <TabPane styleClass="glass-pane" VBox.vgrow="ALWAYS">
        <Tab text="Do'konlar Ro'yxati" closable="false">
            <VBox spacing="15" style="-fx-padding: 20;">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="searchField" promptText="Do'kon nomi bo'yicha qidirish..." prefWidth="300" styleClass="text-field-modern"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="+ Yangi Do'kon Qo'shish" onAction="#handleNewTenant" styleClass="button-primary"/>
                </HBox>
                
                <TableView fx:id="tenantTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="colName" text="Do'kon Nomi" prefWidth="200"/>
                        <TableColumn fx:id="colOwner" text="Egasi" prefWidth="150"/>
                        <TableColumn fx:id="colLicense" text="Litsenziya" prefWidth="150"/>
                        <TableColumn fx:id="colExpiry" text="Amal qilish muddati" prefWidth="150"/>
                        <TableColumn fx:id="colAction" text="Harakat" prefWidth="120"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </Tab>
        
        <Tab text="Global Sozlamalar" closable="false">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="SaaS Platforma Sozlamalari" styleClass="label-sub-header"/>
                <GridPane hgap="10" vgap="10">
                    <Label text="Platforma Nomi:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField text="SmartPOS Global" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="300"/>
                    
                    <Label text="Sinf (Version):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label text="PRO Enterprise" style="-fx-text-fill: #00d2ff;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>
        </Tab>
    </TabPane>
</VBox>
