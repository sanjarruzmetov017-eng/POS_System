<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.smartpos.ui.CustomersViewController" spacing="20" style="-fx-padding: 20;">
    
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Customers Management" styleClass="label-header"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Search customers..." prefWidth="250"/>
    </HBox>

    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Customer List -->
        <VBox styleClass="glass-pane" HBox.hgrow="ALWAYS" style="-fx-padding: 15;">
             <TableView fx:id="customerTable" VBox.vgrow="ALWAYS">
                 <columns>
                     <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                     <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
                     <TableColumn fx:id="colPhone" text="Phone" prefWidth="150"/>
                     <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                     <TableColumn fx:id="colLoyalty" text="Points" prefWidth="80"/>
                     <TableColumn fx:id="colAction" text="Action" prefWidth="100"/>
                 </columns>
                 <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                 </columnResizePolicy>
             </TableView>
        </VBox>

        <!-- Right Side: Add New Customer Panel -->
        <VBox styleClass="glass-pane" prefWidth="300" spacing="15" style="-fx-padding: 20;">
             <Label text="Add New Customer" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #a0a0b0;"/>
             
             <VBox spacing="5">
                 <Label text="Full Name" style="-fx-text-fill: #808090;"/>
                 <TextField fx:id="nameField" promptText="John Doe"/>
             </VBox>
             
             <VBox spacing="5">
                 <Label text="Phone Number" style="-fx-text-fill: #808090;"/>
                 <TextField fx:id="phoneField" promptText="+998 90 123 45 67"/>
             </VBox>

             <VBox spacing="5">
                 <Label text="Email Address" style="-fx-text-fill: #808090;"/>
                 <TextField fx:id="emailField" promptText="john@example.com"/>
             </VBox>
             
             <Region prefHeight="20"/>
             
             <Button text="Add Customer" onAction="#handleAddCustomer" maxWidth="Infinity" styleClass="button-primary"/>
        </VBox>
    </HBox>

</VBox>
