<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.smartpos.ui.ReportsViewController" spacing="20" style="-fx-padding: 20;">
    
    <Label text="Sales Analytics &amp; Reports" styleClass="label-header"/>

    <TabPane VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="Analitika">
                <VBox spacing="20" style="-fx-padding: 20;">
                    <!-- Key Metrics -->
                    <HBox spacing="20">
                        <VBox styleClass="glass-pane" prefWidth="250" style="-fx-padding: 20;">
                            <Label text="Umumiy tushum" style="-fx-text-fill: #a0a0b0;"/>
                            <HBox spacing="5" alignment="BOTTOM_LEFT">
                                <Label text="So'm" style="-fx-font-size: 14px; -fx-text-fill: #00c6ff;"/>
                                <Label fx:id="totalRevenueLabel" text="0.00" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
                            </HBox>
                        </VBox>
                        
                        <VBox styleClass="glass-pane" prefWidth="250" style="-fx-padding: 20;">
                            <Label text="Tranzaksiyalar" style="-fx-text-fill: #a0a0b0;"/>
                            <Label fx:id="totalSalesCountLabel" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
                        </VBox>

                        <VBox styleClass="glass-pane" prefWidth="250" style="-fx-padding: 20;">
                            <Label text="O'rtacha chek" style="-fx-text-fill: #a0a0b0;"/>
                            <HBox spacing="5" alignment="BOTTOM_LEFT">
                                <Label text="So'm" style="-fx-font-size: 14px; -fx-text-fill: #00c6ff;"/>
                                <Label fx:id="avgSaleLabel" text="0.00" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
                            </HBox>
                        </VBox>

                        <VBox styleClass="glass-pane" prefWidth="250" style="-fx-padding: 20; -fx-border-color: #00ff88; -fx-border-width: 0 0 2 0;">
                            <Label text="Sof Foyda" style="-fx-text-fill: #a0a0b0;"/>
                            <HBox spacing="5" alignment="BOTTOM_LEFT">
                                <Label text="So'm" style="-fx-font-size: 14px; -fx-text-fill: #00ff88;"/>
                                <Label fx:id="netProfitLabel" text="0.00" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #00ff88;"/>
                            </HBox>
                        </VBox>
                    </HBox>

                    <HBox spacing="20" VBox.vgrow="ALWAYS">
                        <!-- Chart -->
                        <VBox styleClass="glass-pane" HBox.hgrow="ALWAYS" style="-fx-padding: 15;">
                            <Label text="To'lov turlari taqsimoti" style="-fx-font-weight: bold; -fx-text-fill: #808090;"/>
                            <BarChart fx:id="salesChart" VBox.vgrow="ALWAYS" prefHeight="250">
                                <xAxis><CategoryAxis fx:id="xAxis" label="Payment Method"/></xAxis>
                                <yAxis><NumberAxis fx:id="yAxis" label="Count"/></yAxis>
                            </BarChart>
                            
                            <Separator opacity="0.1" style="-fx-padding: 10 0;"/>
                            
                            <Label text="Eng ko'p sotilgan tovarlar" style="-fx-font-weight: bold; -fx-text-fill: #808090;"/>
                            <PieChart fx:id="topProductsChart" VBox.vgrow="ALWAYS" prefHeight="250"/>
                        </VBox>

                        <!-- Recent Sales Table -->
                        <VBox styleClass="glass-pane" prefWidth="400" spacing="10" style="-fx-padding: 15;">
                            <Label text="Oxirgi savdolar" style="-fx-font-weight: bold; -fx-text-fill: #808090;"/>
                            <TableView fx:id="recentSalesTable" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                                    <TableColumn fx:id="colDate" text="Sana" prefWidth="130"/>
                                    <TableColumn fx:id="colAmount" text="Summa" prefWidth="80"/>
                                    <TableColumn fx:id="colMethod" text="Tur" prefWidth="80"/>
                                    <TableColumn fx:id="colAction" text="Amal" prefWidth="100"/>
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                </columnResizePolicy>
                            </TableView>
                        </VBox>
                    </HBox>
                </VBox>
            </Tab>
            
            <Tab text="Audit Loglar">
                <VBox spacing="10" style="-fx-padding: 20;">
                    <Label text="Tizim Amallari Tarixi" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <TableView fx:id="auditTable" VBox.vgrow="ALWAYS" styleClass="glass-pane">
                        <columns>
                            <TableColumn fx:id="colAuditTime" text="Vaqt" prefWidth="150"/>
                            <TableColumn fx:id="colAuditUser" text="Xodim" prefWidth="100"/>
                            <TableColumn fx:id="colAuditAction" text="Amal" prefWidth="120"/>
                            <TableColumn fx:id="colAuditDetails" text="Tafsilotlar" prefWidth="300"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <HBox alignment="CENTER_RIGHT">
                        <Button text="Yangilash ðŸ”„" onAction="#refreshAuditLogs" styleClass="button-primary"/>
                    </HBox>
                </VBox>
            </Tab>
        </tabs>
    </TabPane>

</VBox>
