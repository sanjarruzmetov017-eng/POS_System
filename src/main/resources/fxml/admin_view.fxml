<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="20" fx:controller="com.smartpos.ui.AdminController" stylesheets="@../css/styles.css" styleClass="admin-pane">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    
    <Label text="Admin Boshqaruvi - Xodimlar" styleClass="label-header"/>
    
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- User List -->
        <VBox HBox.hgrow="ALWAYS" spacing="10">
            <Label text="Xodimlar Ro'yxati" style="-fx-font-weight: bold;"/>
            <TableView fx:id="userTable" VBox.vgrow="ALWAYS" styleClass="glass-pane">
                <columns>
                    <TableColumn fx:id="colUsername" text="Login" prefWidth="100"/>
                    <TableColumn fx:id="colFullName" text="To'liq ismi" prefWidth="150"/>
                    <TableColumn fx:id="colRole" text="Roli" prefWidth="100"/>
                    <TableColumn fx:id="colActive" text="Status" prefWidth="80"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
        
        <!-- Editor -->
        <VBox prefWidth="300" spacing="15" styleClass="glass-pane" style="-fx-padding: 20;">
            <Label text="Xodim Tahriri" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            
            <VBox spacing="5">
                <Label text="Login (Username):"/>
                <TextField fx:id="usernameField"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Parol:"/>
                <PasswordField fx:id="passwordField" promptText="O'zgartirish uchun kiriting"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="To'liq Ismi:"/>
                <TextField fx:id="fullNameField"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="PIN Kod (4 raqam):"/>
                <TextField fx:id="pinField" promptText="Masalan: 1234"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Roli:"/>
                <ComboBox fx:id="roleComboBox" maxWidth="Infinity"/>
            </VBox>
            
            <CheckBox fx:id="activeCheckBox" text="Aktiv xodim"/>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <HBox spacing="10">
                <Button text="Saqlash" onAction="#handleSave" maxWidth="Infinity" HBox.hgrow="ALWAYS" styleClass="button-primary"/>
                <Button text="Tozalash" onAction="#clearFields" styleClass="button-nav"/>
            </HBox>
            <Button text="O'chirish" onAction="#handleDelete" maxWidth="Infinity" styleClass="button-critical"/>
        </VBox>
    </HBox>
</VBox>
