<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="15" prefWidth="400" 
      stylesheets="@../css/styles.css" styleClass="glass-pane"
      fx:controller="com.smartpos.ui.TenantDialogController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    
    <Label text="Yangi Do'kon Ro'yxatdan O'tkazish" styleClass="label-header" style="-fx-font-size: 18px;"/>
    
    <GridPane hgap="10" vgap="10">
        <Label text="Do'kon Nomi:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="text-field-modern"/>
        
        <Label text="Egasi (F.I.SH):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="ownerField" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="text-field-modern"/>
        
        <Label text="Admin Logini:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="adminUserField" text="admin" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="text-field-modern"/>
        
        <Label text="Admin Paroli:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <PasswordField fx:id="adminPassField" text="admin123" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="text-field-modern"/>

        <Label text="Litsenziya muddati:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <DatePicker fx:id="expiryPicker" GridPane.rowIndex="4" GridPane.columnIndex="1" maxWidth="Infinity"/>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding-top: 10;">
        <Button text="Bekor qilish" onAction="#handleCancel" styleClass="button-secondary"/>
        <Button text="Yaratish" onAction="#handleSave" styleClass="button-primary"/>
    </HBox>
</VBox>
