<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" styleClass="content-area" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.smartpos.ui.ExpenseViewController">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Operatsion xarajatlar" styleClass="header-label"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="+ Xarajat qo'shish" onAction="#handleAddExpense" styleClass="button-primary"/>
    </HBox>

    <HBox spacing="20">
        <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
            <Label text="Jami xarajatlar (Tanlangan davr)" styleClass="stat-label"/>
            <Label fx:id="totalExpensesLabel" text="0.00 so'm" styleClass="stat-value-critical"/>
        </VBox>
    </HBox>

    <TableView fx:id="expenseTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colDate" text="Sana" prefWidth="150"/>
            <TableColumn fx:id="colCategory" text="Kategoriya" prefWidth="100"/>
            <TableColumn fx:id="colDesc" text="Tavsif" prefWidth="250"/>
            <TableColumn fx:id="colAmount" text="Miqdor" prefWidth="120"/>
            <TableColumn fx:id="colAction" text="Harakatlar" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>
